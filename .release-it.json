{
    "git": {
        "commitMessage": "chore: craft release v${version}",
        "requireCleanWorkingDir": true,
        "requireBranch": "master",
        "tagAnnotation": "Release v${version}",
        "tagName": "v${version}"
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "conventionalcommits",
        "infile": "CHANGELOG.md"
      }
    }
}
